    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "apply-nsg-to-subnet-primary",
      "resourceGroup": "[parameters('primaryVnetResourceGroup')]",
      "properties": {
