              "type": "string"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            },
            "primaryVnetName": {
              "type": "string"
            },
            "primarySubnetId": {
              "type": "string"
            }
          },
          "functions": [],
          "variables": {
            "appGatewayNameFQDN": "[format('{0}-{1}', parameters('appGatewayName'), parameters('location'))]",
            "appGatewayPrimaryNSG": "[format('{0}-nsg', variables('appGatewayNameFQDN'))]",
            "subnetName": "/subnets/AppGateway"
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2020-06-01",
              "name": "[format('{0}{1}', parameters('primaryVnetName'), variables('subnetName'))]",
              "properties": {
                "addressPrefix": "[reference(parameters('primarySubnetId')).addressPrefix]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('appGatewayPrimaryNSG'))]"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "Primary_IP_Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('appGatewayPrimaryPip_var'))).ipAddress]"
    }
  }
}